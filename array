//to find the largest number in array

#include<iostream>
using namespace std;

int main(void){
int n,max=0;
cout<<"enter the no. of elements you want in array";
cin>>n;
cout<<"enter the elements"<<endl;
int arr[n];
for(int i=0;i<n;i++){
cin>>arr[i];
}
for(int i=0;i<n;i++){
if(arr[i]>max){
max=arr[i];
}

}
cout<<"max element"<<max<<endl;
}


//find largest 3 largest element in array

#include<iostream>
using namespace std;

int main(void){
int n,max=0,max2=0,max3=0;
cout<<"enter the no. of elements you want in array";
cin>>n;
cout<<"enter the elements"<<endl;
int arr[n];
for(int i=0;i<n;i++){
cin>>arr[i];
}
for(int i=0;i<n;i++){
if(arr[i]>max){
max=arr[i];
}
else if(arr[i]>max2){
max2=arr[i];

}
else {
max3=arr[i];}
}
cout<<"max element"<<max<<endl;
cout<<"second max element"<<max2<<endl;
cout<<"third max element"<<max3<<endl;
}


//to find second largest elementr in array

#include<iostream>
using namespace std;

int main(void){
int n,max=0,max2=0,max3=0;
cout<<"enter the no. of elements you want in array";
cin>>n;
cout<<"enter the elements"<<endl;
int arr[n];
for(int i=0;i<n;i++){
cin>>arr[i];
}
for(int i=0;i<n;i++){
if(arr[i]>max){
max=arr[i];
}
else if(arr[i]>max2){
max2=arr[i];

}

}
cout<<"second max element"<<max2<<endl;
}
